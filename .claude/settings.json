{
  "permissions": {
    "allow": ["Bash(*)", "Write", "Edit", "Read", "Grep", "Glob"],
    "deny": ["Bash(rm -rf:*)"]
  },
  "statusLine": {
    "type": "command",
    "command": "uv run .claude/status_lines/status_line_v3.py"
  },
  "hooks": {
    "PreToolUse": [],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run .claude/hooks/adaptive/adaptive_hooks.py --event PostToolUse"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "claudekit-hooks run check-comment-replacement"
          },
          {
            "type": "command",
            "command": "claudekit-hooks run check-unused-parameters"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "claudekit-hooks run create-checkpoint"
          },
          {
            "type": "command",
            "command": "claudekit-hooks run check-todos"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "claudekit-hooks run thinking-level"
          }
        ]
      }
    ]
  }
}
