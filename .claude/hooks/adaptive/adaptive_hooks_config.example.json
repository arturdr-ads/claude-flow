{
  "hooks": {
    "nodejs": {
      "enabled": true,
      "post_tool_hooks": [
        {
          "name": "eslint",
          "command": "npx eslint {changed_files}",
          "description": "Run ESLint on changed files",
          "timeout_seconds": 60
        },
        {
          "name": "prettier-check",
          "command": "npx prettier --check {changed_files}",
          "description": "Check code formatting",
          "timeout_seconds": 30
        }
      ]
    },
    "python": {
      "enabled": true,
      "post_tool_hooks": [
        {
          "name": "ruff-check",
          "command": "ruff check {changed_files}",
          "description": "Run Ruff linter",
          "timeout_seconds": 30
        },
        {
          "name": "ruff-format",
          "command": "ruff format --check {changed_files}",
          "description": "Check code formatting",
          "timeout_seconds": 30
        }
      ]
    },
    "rust": {
      "enabled": true,
      "post_tool_hooks": [
        {
          "name": "cargo-clippy",
          "command": "cargo clippy --all-targets --all-features -- -D warnings",
          "description": "Run Clippy linter",
          "timeout_seconds": 120
        },
        {
          "name": "cargo-fmt-check",
          "command": "cargo fmt -- --check",
          "description": "Check formatting",
          "timeout_seconds": 30
        }
      ]
    },
    "go": {
      "enabled": true,
      "post_tool_hooks": [
        {
          "name": "gofmt-check",
          "command": "gofmt -l .",
          "description": "Check formatting",
          "timeout_seconds": 30
        },
        {
          "name": "go-vet",
          "command": "go vet ./...",
          "description": "Run go vet",
          "timeout_seconds": 60
        }
      ]
    },
    "docker": {
      "enabled": true,
      "post_tool_hooks": [
        {
          "name": "hadolint",
          "command": "hadolint Dockerfile",
          "description": "Lint Dockerfile",
          "timeout_seconds": 30
        }
      ]
    }
  },
  "overrides": {
    "nextjs": {
      "extends": "nodejs",
      "post_tool_hooks": [
        {
          "name": "next-lint",
          "command": "npx next lint",
          "description": "Run Next.js linter",
          "timeout_seconds": 60
        }
      ]
    },
    "nestjs": {
      "extends": "nodejs",
      "post_tool_hooks": [
        {
          "name": "nest-test",
          "command": "npm run test:e2e",
          "description": "Run NestJS e2e tests",
          "timeout_seconds": 120
        }
      ]
    }
  }
}
